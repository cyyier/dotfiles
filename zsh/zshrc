
# only interactive
[[ -o interactive ]] || return

# Path to installation.
export PATH="$HOME/.local/bin:$PATH"
export ZSH="$HOME/.oh-my-zsh"


ZSH_THEME=""

plugins=(git zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

source ~/dotfiles/shell/aliases.sh

ECHO_PINK="\e[38;5;218m"
ECHO_RESET="\e[0m"

# Read custom environment name if it exists
if [[ -f "$HOME/.env_name_tag" ]]; then
    export ENV_TYPE=$(cat "$HOME/.env_name_tag")
else
    export ENV_TYPE="Default"
fi

# --- Productivity Tools Config ---

# 1. Zoxide (Better cd)
if command -v zoxide >/dev/null 2>&1; then
  eval "$(zoxide init zsh)"
  alias cd="z" 
fi

# 2. FZF Configuration
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# 3. FZF + Ripgrep Integration
# Use rg to search files (ignores .git, respects .gitignore, includes hidden files)
export FZF_DEFAULT_COMMAND='rg --files --hidden --follow --glob "!.git/*"'


print
print "   âœ§( â€¢Ì€ Ï‰ â€¢Ì ) Happy coding  ( â€¢Ì€ Ï‰ â€¢Ì )âœ§" 
print "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
print "${ECHO_PINK}Welcome back to your $ENV_TYPE, soso ğŸŒ¸${ECHO_RESET}"
print

eval "$(starship init zsh)"


