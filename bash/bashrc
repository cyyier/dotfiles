# only interactive
[[ $- != *i* ]] && return

source ~/dotfiles/shell/aliases.sh
source ~/dotfiles/shell/prompt.sh

echo "üê≠ Welcome back, soso~"

# colors (bash style)
RESET="\[\e[0m\]"
PINK="\[\e[38;5;218m\]"
BLUE="\[\e[38;5;110m\]"
GRAY="\[\e[38;5;245m\]"
PURPLE="\[\e[38;5;160m\]"

# history
export HISTSIZE=10000
export HISTFILESIZE=20000
export HISTCONTROL=ignoredups:erasedups
shopt -s histappend

set -o noclobber
set -o notify

git_branch() {
  git branch 2>/dev/null | sed -n '/\* /s///p'
}

set_prompt() {
  PS1="${PINK}‚ô° ${BLUE}\u@\h ${GRAY}\w ${PINK}$(git_branch)${RESET}\n${PINK}‚ùØ${PURPLE}‚ùØ${BLUE}‚ùØ${RESET} "
}


PROMPT_COMMAND=set_prompt
